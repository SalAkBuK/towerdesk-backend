NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:password@localhost:5432/towerdesk
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# Postgres timeouts
PGOPTIONS=-c statement_timeout=8000 -c lock_timeout=3000 -c idle_in_transaction_session_timeout=30000
PRISMA_APPLY_SESSION_TIMEOUTS=false

# HTTP and throttling
HTTP_BODY_LIMIT=1mb
THROTTLE_TTL=60
THROTTLE_LIMIT=300
THROTTLE_AUTH_TTL=60
THROTTLE_AUTH_LIMIT=10

# Optional queue settings
QUEUE_ENABLED=false
QUEUE_HOST=127.0.0.1
QUEUE_PORT=6379
QUEUE_PASSWORD=

# Optional storage settings
STORAGE_ENDPOINT=
STORAGE_REGION=auto
STORAGE_BUCKET=
STORAGE_ACCESS_KEY_ID=
STORAGE_SECRET_ACCESS_KEY=
